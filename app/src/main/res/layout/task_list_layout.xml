<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/task_round_bg"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/taskListName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:text="aaa"
            android:textColor="#fff" />

        <Button
            android:id="@+id/addTask"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_add_black_24dp" />

        <Button
            android:id="@+id/task_list_setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_more_vert_black_24dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/task_item_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/finish_text_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#5097D3"
        android:padding="10dp"
        android:text="완료된 업무"
        android:textColor="#fff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/task_finish_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:scrollbars="vertical"/>
</LinearLayout>
