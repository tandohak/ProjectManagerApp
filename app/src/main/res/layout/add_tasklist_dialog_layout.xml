<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">
        <Button
            android:id="@+id/addTaskListCloseBtn"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@drawable/ic_close_black_24dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/txt_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="새 업무 리스트"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/template_border"
            android:orientation="vertical">

            <EditText
                android:id="@+id/task_list_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:maxHeight="85dp"
                android:layout_alignParentTop="true"
                android:lines="1"
                android:gravity="top"
                android:background="@drawable/bg_opacity"
                android:layout_margin="10dp"
                android:autoSizeTextType="uniform"
                android:hint="업무리스트의 제목을 입력하세요."
                android:textSize="12dp" />
        </RelativeLayout>


        <Button
            android:id="@+id/make_taskList"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="12dp"
            android:background="@drawable/task_round_bg"
            android:text="확인"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>
